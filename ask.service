[Unit]
Description=ask
After=network-online.target
Wants=network-online.target
StartLimitBurst=3
StartLimitIntervalSec=60

[Service]
User=root
Group=root
RestartSec=5
Restart=on-failure
WorkingDirectory=/opt/ask
ExecStart=/opt/ask/ask.mjs
EnvironmentFile=/opt/ask/.env

[Install]
WantedBy=multi-user.target
